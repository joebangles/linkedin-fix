{
  "manifest_version": 3,
  "name": "LinkedIn Fix",
  "version": "1.0.0",
  "description": "Pretend your problems don't exist.",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/linkedin-icon.png"
  },
  "icons": {
    "128": "icons/linkedin-icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
